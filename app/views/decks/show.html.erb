<h1>詳細</h1>

<%= @deck.deck_name %>
<%= @deck.body %>

<h3>いいね件数: <%= @deck.likes.count %></h3>
<% if current_user.already_liked?(@deck) %>
<%= button_to 'いいねを取り消す', deck_like_path(@deck), method: :delete %>
<% else %>
  <%= button_to 'いいね', deck_likes_path(@deck) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @deck.liked_users.each do |user| %>
  <li><%= user.user_name %></li>
<% end %>